                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginHorizontal="5dp"
                            android:backgroundTint="#F8EEE8"
                            app:cardCornerRadius="18dp">

                            <ImageView
